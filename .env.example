# Server Configuration
NODE_ENV=development
PORT=8000
API_BASE_URL=/api

# Database Configuration
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=preppo_db
DATABASE_USER=preppo_user
DATABASE_PASSWORD=your_secure_password
DATABASE_POOL_SIZE=30

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_min_32_chars_long
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_secret_key_min_32_chars_long
JWT_REFRESH_EXPIRES_IN=7d

# LLM Provider Configuration
# Default provider: 'openai' or 'gemini'
LLM_PROVIDER=openai

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_ORG_ID=org-your-org-id
# Service tier: 'default' (standard), 'priority' (faster, premium pricing), 'auto', 'flex', 'scale'
OPENAI_SERVICE_TIER=default
# Model overrides (optional, uses defaults if not set)
OPENAI_MODEL_RAG=gpt-4o-mini
OPENAI_MODEL_GENERATOR=gpt-4o-mini
OPENAI_MODEL_MUSIC=gpt-4o-mini
OPENAI_MODEL_EMBEDDING=text-embedding-3-small

# Google Gemini Configuration
GEMINI_API_KEY=your-gemini-api-key
# Model overrides (optional, uses defaults if not set)
GEMINI_MODEL_RAG=gemini-1.5-flash
GEMINI_MODEL_GENERATOR=gemini-1.5-flash
GEMINI_MODEL_MUSIC=gemini-1.5-flash

# S3/Object Storage Configuration
AWS_ACCESS_KEY_ID=your_access_key
AWS_SECRET_ACCESS_KEY=your_secret_key
AWS_REGION=us-east-1
S3_BUCKET_NAME=preppo-data
S3_ENDPOINT=https://s3.amazonaws.com

# Music Provider Configuration (Suno API)
SUNO_API_KEY=your_suno_api_key
SUNO_API_BASE_URL=https://api.suno.ai

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Limits
MAX_FILE_SIZE_MB=50
MAX_UPLOAD_PER_CAMPAIGN_PER_DAY=10

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=./logs/app.log

# Performance
GENERATOR_ROLL_TIMEOUT_MS=300
RAG_QA_TIMEOUT_MS=2000

# Feature Flags
ENABLE_PROMPT_CACHING=true
ENABLE_MUSIC_GENERATION=true
ENABLE_SESSION_PACKETS=true
